@model Book

<div class="container">
    <div class="text-center">
        @if (Model.Id != 0)
        {
            <h2>Change the book</h2>
        }
        else
        {
            <h2>Add new Book</h2>
        }
    </div>
</div>
<div class="container">
    <div class="row">
        <form method="post" class="row" enctype="text/plain">
            <input asp-for="Id" hidden />
            <div class="form-floating py-2 col-5 mt-xxl-4">
                <input asp-for="Title" class="form-control border-0 shadow" />
                <label asp-for="Title" class="ms-1 my-1 text-dark"></label>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-5 mt-xxl-4">
                <input asp-for="Author" class="form-control border-0 shadow" />
                <label asp-for="Author" class="ms-1 my-1 text-dark"></label>
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-5 mt-xxl-4">
                <input asp-for="ISBN" class="form-control border-0 shadow" />
                <label asp-for="ISBN" class="ms-1 my-1 text-dark"></label>
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-5 mt-xxl-4">
                <input asp-for="Price" class="form-control border-0 shadow" />
                <label asp-for="Price" class="ms-1 my-1 text-dark"></label>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-5 mt-xxl-4">
                <input asp-for="Description" class="form-control border-0 shadow" />
                <label asp-for="Description" class="ms-1 my-1 text-dark"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-5 mt-xxl-4">
                <input asp-for="ImageURL" class="form-control border-0 shadow" />
                <label asp-for="ImageURL" class="ms-1 my-1 text-dark"></label>
                <span asp-validation-for="ImageURL" class="text-danger"></span>
            </div>
            <div class="col-6">
                @if (Model.Id != 0)
                {
                    <button type="submit" class="btn btn-success form-control">Update</button>
                }
                else
                {
                    <button type="submit" class="btn btn-success form-control">Create</button>
                }
                
            </div>
        </form>
    </div>
</div>


