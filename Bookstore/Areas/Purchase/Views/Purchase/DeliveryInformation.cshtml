@inject ApplicationDbContext DB
@{
    var db = DB;
}

@model Order

<div class="container mb-5">
    <div class="row justify-content-center ">
        <div class="col-sm-8 col-md-6 col-lg-5">
            <h1 class="text-center">Информация о доставке</h1>
            <form method="post" enctype="multipart/form-data">
                <input asp-for="UserId" hidden/>
                <input asp-for="PurchaseAmount" hidden />
                <div class="form-group p-3">
                    <h6>Получатель</h6>
                    <div>
                        <label class="ms-1 my-1 text-dark">Имя</label>
                        <input asp-for="@db.User.Find(Model.UserId).FirstName" class="form-control border-0 shadow" />
                        <span asp-validation-for="@db.User.Find(Model.UserId).FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="ms-1 my-1 text-dark">Фамилия</label>
                        <input asp-for="@db.User.Find(Model.UserId).LastName" class="form-control border-0 shadow" />
                        <span asp-validation-for="@db.User.Find(Model.UserId).LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="ms-1 my-1 text-dark">Номер телефона</label>
                        <input asp-for="@db.User.Find(Model.UserId).PhoneNumber" class="form-control border-0 shadow" />
                        <span asp-validation-for="@db.User.Find(Model.UserId).PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group p-3">
                    <div>
                        <label asp-for="isCourierDelivery">Способ доставки</label>
                        <select class="rounded">
                            <option value="@Model.isCourierDelivery = false">Пункт выдачи</option>
                            <option value="@Model.isCourierDelivery = true">Курьером</option>
                        </select>
                    </div>
                    <div>
                        @*Добавить пункты выдачи в базу данных*@
                        <label asp-for="isCourierDelivery">Выберите пункт выдачи</label>
                        <select class="rounded mt-1">
                            <option value="">Доставка курьером</option>
                            <option value="">Ленина</option>
                            <option value="">Московинка</option>
                            <option value="">Пургуновская</option>
                            <option value="">ВДНХ</option>
                        </select>
                    </div>
                </div>
                <hr />
                <div>
                    <h6>Информация для доставки курьером</h6>
                    <div class="form-group">
                        <label class="ms-1 my-1 text-dark">Регион</label>
                        <input asp-for="@db.User.Find(Model.UserId).Region" class="form-control border-0 shadow" />
                        <span asp-validation-for="@db.User.Find(Model.UserId).Region" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="ms-1 my-1 text-dark">Город</label>
                        <input asp-for="@db.User.Find(Model.UserId).City" class="form-control border-0 shadow" />
                        <span asp-validation-for="@db.User.Find(Model.UserId).City" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="ms-1 my-1 text-dark">Улица</label>
                        <input asp-for="@db.User.Find(Model.UserId).Street" class="form-control border-0 shadow" />
                        <span asp-validation-for="@db.User.Find(Model.UserId).Street" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="ms-1 my-1 text-dark">Номер дома</label>
                        <input asp-for="@db.User.Find(Model.UserId).HouseNumber" class="form-control border-0 shadow" />
                        <span asp-validation-for="@db.User.Find(Model.UserId).HouseNumber" class="text-danger"></span>
                    </div>
                </div>
                <button asp-area="Purchase" asp-controller="Purchase" asp-action="FundsVerification"
                        type="submit" class="btn btn-primary w-100 mt-3 mb-5">
                    Buy
                </button>
            </form>
        </div>
    </div>
</div>