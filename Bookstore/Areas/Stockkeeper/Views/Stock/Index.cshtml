@model StockVM

<h2>Склад</h2>

<div class="container">
    <div class="col-2 pb-5 mt-2 pt-3">
        <button id="openSearch" onclick="EnterIdProduct('/Stockkeeper/Stock/AddProductInStock?')" class="btn btn-success btn-outline-warning border-0 form-control">Новое поступление</button>
    </div>

    <div class="row border border-1 rounded rounded-1 mt-1">
        @if (Model.Stock != null)
        {
            <table>
                <tr>
                    <th>Id</th>
                    <th>Название</th>
                    <th>Количество</th>
                    <th>Номер полки</th>
                </tr>
                @foreach (var book in Model.Stock)
                {
                    <tr>
                        <td>@book.ProductId</td>
                        <td>@Model.Books.FirstOrDefault(u=>u.BookId==book.ProductId).Title</td>
                        <td>@book.Count</td>
                        <td>@book.ShelfNumber</td>
                    </tr>
                }
            </table>

        }
    </div>

</div>

@section Scripts{
    <script src="~/js/AddProductToStore.js"></script>
}



