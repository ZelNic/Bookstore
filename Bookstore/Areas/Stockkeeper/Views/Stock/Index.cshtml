@model StockVM


<h2>
    Склад
    @if (Model != null)
    {
        <a>@Model.Stock.City,@Model.Stock.Street</a>
    }
</h2>

<div class="container">
    <div class="col-2 pb-5 mt-2 pt-3">
        <button id="openSearch" onclick="enterIdProduct('/Stockkeeper/Stock/AddProductInStock?')" class="btn btn-success border-0 form-control">Новое поступление</button>
    </div>

    <div class="row border border-2 rounded rounded-2 mt-1 p-2">

        <table id="stock" class="table table-bordered table-striped pt-3 pb-3 my-1">
            <thead class="pt-4 pb-4 table-dark">
                <tr>
                    <th>Id Записи</th>
                    <th>Id Товара</th>
                    <th>Название</th>
                    <th>Количество</th>
                    <th>Номер полки</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/Store.js"></script>
}
