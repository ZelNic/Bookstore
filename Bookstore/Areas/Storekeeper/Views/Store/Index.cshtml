@model IEnumerable

<h2>Склад</h2>


<div class="container">
    <div class="col-2 pb-5 mt-2 pt-3">
        <button id="openSearch" class="btn btn-success btn-outline-warning border-0 form-control">Новое поступление</button>
    </div>

    <div class="hidden">
        <form class="d-flex" method="post" asp-area="Customer" asp-controller="Home" asp-action="Search">
            <input class="form-control me-sm-1 bg-light" type="search" name="searchString" placeholder="Поиск по названию">
            <input class="form-control me-sm-1 bg-light" type="search" name="searchString" placeholder="Поиск по Id">
            <button class="btn btn-dark my-4 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
        </form>
        <div id="hide" class="mt-1">
            <button class="btn btn-secondary">Скрыть</button>
        </div>
    </div>

    @{
        @if (Model != null)
        {
            string isHidden = "visible";
        }
        else
        {
            string isHidden = "hidden";
        }

        <div class="@isHidden">
        </div>
    }
    
</div>















@section Scripts{
    <script src="~/js/AddProductToStore.js"></script>
}