@model Book

<div class="container">
    <div>
        <h1>@Model.Author : @Model.Title</h1>
    </div>
    <div class="row">
        <div class="col-3">
            <img src="@Model.ImageURL" alt="Image" class="rounded rounded-1 col-12" />
        </div>
        <div class="col-3 bg-body-tertiary rounded rounded-1">
            <form method="post" enctype="multipart/form-data">

                <div>
                    Author:
                    <a asp-area="" asp-controller="" asp-action="" asp-route-author=""> @Model.Author</a>
                </div>
                <div>
                    Editor:
                    <a asp-area="" asp-controller="" asp-action="" asp-route-author=""> Piter</a>
                </div>
                <div>
                    ISBN: @Model.ISBN
                </div>
                <hr class="col-8 mb-1" />
                <div class="mt-0 pt-0">
                    <div class="fs-5 fw-bolder">@Model.Price ₽</div>
                    <button type="submit" asp-area="Customer" asp-controller="ShoppingBasket" asp-action="AddBasket"
                            asp-route-productId="@Model.BookId" class="btn btn-warning border-0 col-3">Buy
                    </button>
                </div>
                <hr class="col-8" />
                <div>
                    <i class="bi bi-bookmark-plus-fill"></i>
                    <button type="submit" asp-area="Customer" asp-controller="Wishlist" asp-action="AddWishList"
                            asp-route-productId="@Model.BookId" class="btn">
                        Add to WishList
                    </button>
                </div>

            </form>
        </div>
        <div class="col-5">
            <div>
                Рейтинг: 9.6
                <i class="bi bi-star-fill"></i>
            </div>
            <div>
                Оценить:
                @for (int i = 0; i < 10; i++)
                {
                    <i class="bi bi-star"></i>
                }
            </div>
            <div class="">
                @Html.Raw(Model.Description)
            </div>
        </div>
    </div>
    <hr />
    <div class="text-dark ">
        Oтзывы
    </div>
    <hr />
    <div class="mb-5 pb-5">
        <div>
            
        </div>
        <hr />        
    </div>
</div>