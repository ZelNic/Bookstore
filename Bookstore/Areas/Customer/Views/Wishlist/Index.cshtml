@model User

@inject ApplicationDbContext DB
@{
    var db = DB;
}

@if (Model == null)
{
    <h1>Please Log In</h1>
}
else
{
    var wishlist = db.WishLists.Where(u => u.UserId == Model.UserId);

    @if (wishlist.Count() == 0)
    {
        <h1>Empty Wish List</h1>
    }
    else
    {
        <h1>Wish List</h1>
    }

    <div class="row row-cols-2">
        <div class="container col-10">
            <div class="row row-cols-2 row-cols-md-6 mb-5">
                @foreach (var product in wishlist)
                {
                    var pr = @db.Books.Find(product.ProductId);
                    <div class="col-2 mb-3">
                        <div class="card card-subtitle h-100 shadow pt-1 border-0">
                            <img src="@pr.ImageURL" class="card-img-top mx-auto rounded-1" style="object-fit: cover; width: 50%; height: 150px;" />
                            <div class="card-body mt-0 pb-0">
                                @pr.Title
                            </div>
                            <div class="card-body mt-0 pb-0">
                                @pr.Price p
                            </div>
                            <div class="card card-footer bg-transparent border-0">
                                <form method="post">
                                    <button asp-area="" asp-controller="" asp-action="" asp-route-productId="@pr.BookId" asp-route-delete="true"
                                            type="submit" class="btn btn-danger">
                                        <i class="bi bi-x-circle"></i>
                                    </button>
                                    <div class="row border border-1 rounded-1">
                                        <div class="col-3">
                                            <button asp-area="" asp-controller="" asp-action="" asp-route-productId="@pr.BookId" asp-route-minus="true"
                                                    type="submit" class="btn">
                                                <i class="bi bi-dash-circle"></i>
                                            </button>
                                        </div>
                                        <div class="col-3">
                                            @{
                                                if (db.ShoppingBasket.Where(u => u.UserId == Model.UserId).Where(c => c.ProductId == product.ProductId).FirstOrDefault() != null)
                                                {
                                                    var count = db.ShoppingBasket.Where(u => u.UserId == Model.UserId).Where(c => c.ProductId == product.ProductId).FirstOrDefault().CountProduct;
                                                    <h6>@count</h6>
                                                }
                                            }
                                        </div>
                                        <div class="col-3">
                                            <button asp-area="" asp-controller="" asp-action="" asp-route-productId="@pr.BookId" asp-route-plus="true"
                                                    type="submit" class="btn">
                                                <i class="bi bi-plus-circle"></i>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

