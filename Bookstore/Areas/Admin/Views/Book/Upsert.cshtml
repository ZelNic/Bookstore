@model BookVM

<div class="container">
    <div class="text-center">
        @if (Model.Book.BookId != 0)
        {
            <h2>Change the book</h2>
        }
        else
        {
            <h2>Add new Book</h2>
        }
    </div>


    <div class="container">
        <div class="row">
            <form method="post" class="row" enctype="multipart/form-data">
                <input asp-for="Book.BookId" hidden />
                <div class="form-floating py-2 col-5 mt-xxl-4">
                    <input asp-for="Book.Title" class="form-control border-0 shadow" />
                    <label asp-for="Book.Title" class="ms-1 my-1 text-dark"></label>
                    <span asp-validation-for="Book.Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-5 mt-xxl-4">
                    <input asp-for="Book.Author" class="form-control border-0 shadow" />
                    <label asp-for="Book.Author" class="ms-1 my-1 text-dark"></label>
                    <span asp-validation-for="Book.Author" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-5 mt-xxl-4">
                    <input asp-for="Book.ISBN" class="form-control border-0 shadow" />
                    <label asp-for="Book.ISBN" class="ms-1 my-1 text-dark"></label>
                    <span asp-validation-for="Book.ISBN" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-5 mt-xxl-4">
                    <input asp-for="Book.Price" class="form-control border-0 shadow" />
                    <label asp-for="Book.Price" class="ms-1 my-1 text-dark"></label>
                    <span asp-validation-for="Book.Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-5 mt-xxl-4">
                    <input asp-for="Book.Description" class="form-control border-0 shadow" />
                    <label asp-for="Book.Description" class="ms-1 my-1 text-dark"></label>
                    <span asp-validation-for="Book.Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-5 mt-xxl-4">
                    <input asp-for="Book.ImageURL" class="form-control border-0 shadow" />
                    <label asp-for="Book.ImageURL" class="ms-1 my-1 text-dark"></label>
                    <span asp-validation-for="Book.ImageURL" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-5 mt-xxl-4">
                    <select asp-for="Book.Category" class="form-control border-0 shadow">
                        <option value="">Выберите категорию</option>
                        @foreach (var category in Model.CategoriesList ?? Enumerable.Empty<Category>())
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                    <label asp-for="Book.Category" class="ms-1 my-1 text-dark"></label>
                    <span asp-validation-for="Book.Category" class="text-danger"></span>
                </div>

                <div class="col-6">
                    @if (Model.Book.BookId != 0)
                    {
                        <div class="container mt-4">
                            <div class="row justify-content-center align-items-center">
                                <div class="col text-center">
                                    <a class="btn btn-danger mb-1" asp-action="Delete" asp-controller="Book" asp-route-id="@Model.Book.BookId">Delete</a>
                                </div>
                                <div class="col text-center">
                                    <button type="submit" class="btn btn-success form-control">Update</button>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-success form-control">Create</button>
                    }
                </div>
            </form>
        </div>
    </div>



</div>
