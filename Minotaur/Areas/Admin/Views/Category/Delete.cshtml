@model Category

<div class="container mx-auto text-center m-4 mt-5">
    <div class="row">
        <div class="form-floating py-2 col-5 mt-xxl-4 mx-auto">
            <input asp-for="@Model.Name" class="form-control border-0 shadow" />
            <label asp-for="@Model.Name" class="ms-1 my-1 text-dark"></label>
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="text-center">
            <form method="post" asp-controller="Category" asp-action="Delete" asp-route-categoryId="@Model.Id">
                @Html.AntiForgeryToken()
                <div class="form-group col-10 mt-4 mx-auto">
                    <input type="submit" class="btn btn-danger" value="Delete" />
                </div>
            </form>
        </div>
    </div>
</div>


