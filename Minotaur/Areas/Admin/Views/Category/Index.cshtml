@model List<Category>

<div class="container mt-5">

    <div class="text-center">
        <h2>Жанры</h2>
    </div>

    <div class="col-12 pd-2">
        <div class="row justify-content-end">
            <div class="col-4">
                <a class="btn btn-success" asp-controller="Category" asp-action="Upsert">Добавить</a>
            </div>
        </div>
    </div>

    <div class="row col-6 mx-auto mt-2">
        <div>
            <table class="table table-hover table-bordered table-striped text-center">
                <thead>
                    <tr>
                        <th>Номер</th>
                        <th>Название</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.Id</td>
                            <td>
                                @category.Name
                            </td>
                            <form method="post" enctype="multipart/form-data">
                            <td class="mx-auto">
                                <a>
                                    <a class="btn btn-success" asp-area="Admin" asp-controller="Category" asp-action="Upsert" asp-route-categoryId="@category.Id">Изменить</a>
                                </a>
                            </td>
                            <td class="mx-auto">
                                <a>
                                    <a class="btn btn-primary" asp-area="Admin" asp-controller="Category" asp-action="BookCategory" asp-route-categoryId="@category.Id">Показать</a> @*!!!*@
                                </a>
                            </td>
                            </form>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

