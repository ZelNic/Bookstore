<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Минота́вр </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Minotaur.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.css" />
</head>
<body class="mb-5">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-4 rounded-bottom-2">
            <div class="container-fluid">
                <a class="navbar-brand text-light" asp-area="Customer" asp-controller="Home" asp-action="Index"> Минота́вр </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div>
                    <form class="d-flex" method="get" asp-area="Customer" asp-controller="Home" asp-action="Search">
                        <input class="form-control me-sm-1 bg-light" type="search" name="searchString" placeholder="Поиск">
                        <button class="btn btn-dark my-4 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
                    </form>
                </div>
                <div class="navbar-nav flex-grow-1 justify-content-end">
                    <partial name="_FunctionsNavBar" />
                </div>
                <div class="navbar-nav flex-grow-1 justify-content-end">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
        <a href="https://t.me/minotaurStore23_bot" target="_blank" style="position: fixed; bottom:30px; right: 20px; font-size: 30px;"><i class="bi bi-telegram"></i></a>
    </header>



    <div>
        <main role="main" class="p-1">
            @RenderBody()
        </main>
    </div>



    <footer class="footer text-muted mt-5 pt-5">
        <div>
            &copy; 2023 - Минота́вр - <a asp-area="Customer" asp-controller="Home" asp-action="Privacy"><i class="bi bi-shield-check"></i>Соглашение</a>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.min.js"></script>
    <script src="https://cdn.tiny.cloud/1/p84zgz2zivny0yu94x04y98z4spl2bo2i5s5bswvjfygq36r/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


